<div class="container-fluid mt-5 contact-style">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Sign Up</h1>
            <p class="text-center sub-heading">We will be happy to help you</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contactus" method="post">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-controls" id="exampleInputPassword1" placeholder="Full Name"
                                name="name">
                        </div>


                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-controls" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter your email" name="email">
                        </div>




                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone</label>
                            <input type="text" class="form-controls" id="exampleInputPassword1"
                                placeholder="Phone Number" name="phone">
                        </div>


                        <div class="form-group">
                            <label>Gender:</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="maleRadio" value="male">
                                <label class="form-check-label" for="maleRadio">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="femaleRadio"
                                    value="female">
                                <label class="form-check-label" for="femaleRadio">Female</label>
                            </div>
                        </div>



                        <div class="form-group">
                            <label for="courseSelect">Select a Course</label>
                            <select class="form-controls" id="courseSelect" name="course">
                                <option value="cpp">C++</option>
                                <option value="dbms">DBMS</option>
                                <option value="html">HTML</option>
                                <option value="css">CSS</option>
                                <option value="java">Java</option>
                                <option value="nodejs">Nodejs</option>
                            </select>
                        </div>


                        <div class="form-group">
                            <label for="exampleInputPassword1">Address</label>
                            <input type="text" class="form-controls" id="exampleInputPassword1" placeholder="Address..."
                                name="address">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-controls" id="exampleInputPassword1"
                                placeholder="Password..." name="password">
                        </div>


                        <button type="submit" class="btn-style">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>